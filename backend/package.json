{
    "name": "backend",
    "version": "0.1.0",
    "description": "SNORQ Backend API - Fastify + Prisma + Socket.io",
    "main": "dist/server.js",
    "scripts": {
        "dev": "tsx watch src/server.ts",
        "build": "npm run db:generate && tsc && npx tsc prisma/seed.ts --outDir dist/prisma --esModuleInterop --skipLibCheck --resolveJsonModule",
        "start": "npm run db:migrate && (node dist/prisma/seed.js || true) && node dist/server.js",
        "lint": "eslint src --ext .ts",
        "lint:fix": "eslint src --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "db:generate": "prisma generate",
        "db:migrate": "prisma migrate deploy",
        "db:migrate:dev": "prisma migrate dev",
        "db:push": "prisma db push",
        "db:studio": "prisma studio",
        "db:seed": "tsx prisma/seed.ts",
        "db:reset": "prisma migrate reset"
    },
    "dependencies": {
        "@fastify/cookie": "^9.3.1",
        "@fastify/cors": "^9.0.1",
        "@fastify/helmet": "^11.1.1",
        "@fastify/rate-limit": "^9.1.0",
        "@fastify/websocket": "^10.0.1",
        "@prisma/client": "^5.9.1",
        "axios": "^1.6.7",
        "bcrypt": "^5.1.1",
        "bull": "^4.12.2",
        "dotenv": "^16.4.1",
        "fastify": "^4.26.0",
        "google-auth-library": "^9.6.3",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.2",
        "node-fetch": "^2.7.0",
        "pino": "^8.18.0",
        "pino-pretty": "^10.3.1",
        "prisma": "^5.9.1",
        "resend": "^6.6.0",
        "socket.io": "^4.7.4",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/node": "^20.11.16",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "eslint": "^8.56.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vitest": "^1.2.2"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}